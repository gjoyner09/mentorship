<div class="px-4 mt-4">
    <h1>Donate</h1>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <br>
                <br>
                <%= form_with url:"/donate", method: :post do |form| %>
                    <div class="field">
                        <%= form.label "Amount ($AUD)", class:"lead" %>
                        <%= form.number_field :amount, in: 1..1000 %>
                        <%= form.submit "Submit", class: "btn btn-primary" %>
                    </div>
                    <br>
                <% end %>
                <br>
                <p class = "lead">We are a nonprofit organisation that relies on public donations. Please donate however much you can!</p>
                <br>
                <br>
            </div>
            <div class="col-12 col-md-6">
                <%= image_tag asset_path("donate-img.jpg"), class: "about-image" %>
                <br>
                <br>
            </div>
        </div>
    </div>

</div>