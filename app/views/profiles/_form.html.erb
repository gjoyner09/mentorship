<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label 'Reason for interest in the program' %>
    <%= form.text_area :reason_for_interest %>
  </div>

  <div class="field">
    <%= form.label 'Personal interests' %>
    <%= form.text_area :interests %>
  </div>

  <div class="field">
    <%= form.label 'Topics you would like to or be willing to discuss' %>
    <%= form.text_area :discussion_topics %>
  </div>

  <div class="field">
    <%= form.label :country_id %>
    <%= form.collection_select :country_id, Country.order(:country_name), :id, :country_name %>
  </div>

  <div class="field">
    <%= form.label :gender_id %>
    <%= form.collection_select :gender_id, Gender.order(:id), :id, :gender_name %>
  </div>

  <div class="field">
    <%= form.label :sexuality_id %>
    <%= form.collection_select :sexuality_id, Sexuality.order(:id), :id, :sexuality_name %>
  </div>

  <div class="field">
    <%= form.label :identity_id %>
    <%= form.collection_select :identity_id, Identity.order(:id), :id, :identity_name %>
  </div>

  <div class="field">
    <%= form.label 'Select if you are interested in being a mentor' %>
    <%= form.check_box :mentor %>
  </div>

  <div class="field">
    <%= form.label 'Select if you are interested in being a mentee' %>
    <%= form.check_box :mentee %>
  </div>

  <div class="field">
    <%= form.label 'Select if you want your mentor profile to be visible to the public' %>
    <%= form.check_box :mentor_public %>
  </div>

  <div class="field">
    <%= form.label 'Select if you want your mentee profile to be visible to mentors' %>
    <%= form.check_box :mentee_public %>
  </div>

  <div class="field">
    <%= form.label 'Upload a photo of yourself (optional)' %>
    <%= form.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
