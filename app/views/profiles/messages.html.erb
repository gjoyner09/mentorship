<% if !user_signed_in? %>
    <h1>You must sign in to see your messages</h1>
<% else %>
    <h1>Messages</h1>
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>From/To</th>
                <th>Message</th>
                <th>Date/time</th>
                <th>Respond</th>
            </tr>
        </thead>

        <tbody>
            <% @messages.reverse_each do |message| %>
                <tr>
                    <% if message.sender_id == current_user.id %>
                        <td>Sent</td>
                        <%# Finds the name of the person the message was sent to/from and links to her/his page %>
                        <td><%= link_to Profile.find_by(user_id: message.receiver_id).name, profile_path(Profile.find_by(user_id: message.receiver_id).id) %></td>
                    <% else %>
                        <td>Received</td>
                        <%# Finds the name of the person the message was sent to/from and links to her/his page %>
                        <td><%= link_to Profile.find_by(user_id: message.sender_id).name, profile_path(Profile.find_by(user_id: message.sender_id).id) %></td>
                    <% end %>
                    <td><%= message.message %></td>
                    <td><%= message.created_at %></td>
                    <%# links to the appropriate Profile page based on id %>
                    <% if message.sender_id == current_user.id %>
                        <td><%= link_to 'Respond', profile_path(Profile.find_by(user_id: message.receiver_id).id) %></td>
                    <% else %>
                        <td><%= link_to 'Respond', profile_path(Profile.find_by(user_id: message.sender_id).id) %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>