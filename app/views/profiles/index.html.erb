<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Reason for interest</th>
      <th>Interests</th>
      <th>Discussion topics</th>
      <th>Country</th>
      <th>Gender</th>
      <th>Sexuality</th>
      <th>Identity</th>
      <th>Mentor</th>
      <th>Mentee</th>
      <th>Mentor public</th>
      <th>Mentee public</th>
      <th>Mentor availability</th>
      <th>Mentee availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <% if profile.mentor_public == true %>
        <tr>
          <td><%= profile.name %></td>
          <td><%= profile.age %></td>
          <td><%= profile.reason_for_interest %></td>
          <td><%= profile.interests %></td>
          <td><%= profile.discussion_topics %></td>
          <td><%= profile.country_id %></td>
          <td><%= profile.gender_id %></td>
          <td><%= profile.sexuality_id %></td>
          <td><%= profile.identity_id %></td>
          <td><%= profile.mentor %></td>
          <td><%= profile.mentee %></td>
          <td><%= profile.mentor_public %></td>
          <td><%= profile.mentee_public %></td>
          <td><%= profile.mentor_availability %></td>
          <td><%= profile.mentee_availability %></td>
          <td><%= link_to 'Show', profile %></td>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
